<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.gmail.eamosse.imdb.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/home_fragment">

        <action
            android:id="@+id/action_HomeFragment_to_HomeSecondFragment"
            app:destination="@id/navigation_home_second" />

        <action
            android:id="@+id/action_HomeFragment_to_MoviesFragment"
            app:destination="@id/navigation_list_movies" />
    </fragment>
    <fragment
        android:id="@+id/navigation_home_second"
        android:name="com.gmail.eamosse.imdb.ui.home.HomeSecondFragment"
        android:label="@string/home_second"
        tools:layout="@layout/home_second_fragment">
        <action
            android:id="@+id/action_HomeSecondFragment_to_HomeFragment"
            app:destination="@id/navigation_home" />

        <argument
            android:name="myArg"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/navigation_list_movies"
        android:name="com.gmail.eamosse.imdb.ui.movies.MoviesFragment"
        android:label="@string/home_second"
        tools:layout="@layout/movies_fragment">

        <action
            android:id="@+id/action_MoviesFragment_to_MovieDetail"
            app:destination="@id/navigation_movie_detail" />

        <argument
            android:name="category"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/navigation_movie_detail"
        android:name="com.gmail.eamosse.imdb.ui.movies.MovieDetailFragment"
        android:label="@string/home_second"
        tools:layout="@layout/movie_detail_fragment">

        <argument
            android:name="movie"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/navigation_trending"
        android:name="com.gmail.eamosse.imdb.ui.trending.TrendingFragment"
        android:label="@string/title_trending"
        tools:layout="@layout/trending_fragment" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.gmail.eamosse.imdb.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/notifications_fragment" />
</navigation>